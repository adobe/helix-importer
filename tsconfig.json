{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "plugins": [{
      "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
      "after": true,
    }]
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "include": [
    "src"
  ]
}